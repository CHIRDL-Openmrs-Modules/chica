	Validation:	;;
Library:
	Purpose:		Provides a specific reminder, tailored to the patient who identified one or more lead exposure risk factors;;
	Explanation:	Based on AAP screening recommendations;;
	Keywords:	PWS, Pb, lead, specific, exposure;;
	Citations:		Screening for Elevated Blood Levels - AAP;;
	Links:		;;
Knowledge:
	Type:		data_driven;;
Data:

mode:=read {mode from Parameters};
Box1:=read {box1 from Parameters};
Box2:=read {box2 from Parameters};
Box3:=read {box3 from Parameters};
Box4:=read {box4 from Parameters};
Box5:=read {box5 from Parameters};
Box6:=read {box6 from Parameters};

If (mode = PRODUCE) then
eh := read {ENVIRONMENTAL HISTORY from CHICA} Where it Occurred Within Past 6 Months;
screen := read {VENOUS BLOOD LEAD - QUALITATIVE} Where it Occurred Within Past 1 Year;
rmrs_lead := read Exist {LEAD LEVEL-PEDS from RMRS} Where it Occurred Within Past 365 Days;
endif
;;
Priority:		232;;
	Evoke:		;;
Logic:
If (mode = PRODUCE) then


If (rmrs_lead = True) then conclude False;

/****************
screen := read Exist (NOT INDICATED, PENDING, POSITIVE, NEGATIVE) 
If (screen = True) then conclude False;
****************/
If 'NOT INDICATED' is in screen then conclude False;
If 'PENDING' is in screen then conclude False;
If 'POSITIVE' is in screen then conclude False;
If 'NEGATIVE' is in screen then conclude False;

/***********
fme := read Exist (FAMILY MEMBER WITH EXPOSURE)
If (fme = True) then || Risk_Factor || = "Close contact works directly with lead.";
************/
If 'FAMILY MEMBER WITH EXPOSURE' is in eh then || Risk_Factor || = "Close contact works directly with lead.";

/*************
hre := read Exist (HOME RENOVATED BEFORE 1978)
If (hre = True) then || Risk_Factor || = "Home built before 1978 has undergone recent renovation.";
************/
If 'HOME RENOVATED BEFORE 1978' is in eh then || Risk_Factor || = "Home built before 1978 has undergone recent renovation.";


/*******
hrz := read Exist (HOME BUILT BEFORE 1950)
If (hrz = True) then || Risk_Factor || = "|| firstname ||'s home was built before 1950.";
********/
If 'HOME BUILT BEFORE 1950' is in eh then || Risk_Factor || = "|| firstname ||'s home was built before 1950.";

/****
sft := read Exist (SIBLING OR FRIEND WITH LEAD TOXICITY)
If (sft = True) then || Risk_Factor || = "|| firstname || has had direct contact with someone with lead toxicity.";
******/
If 'SIBLING OR FRIEND WITH LEAD TOXICITY' is in eh then || Risk_Factor || = "|| firstname || has had direct contact with someone with lead toxicity.";


If ( Risk_Factor  = True) then conclude True;
Else conclude False;

endif

If (mode = CONSUME) then

If  (Box2=true) then
 CALL storeObs With "VENOUS BLOOD LEAD - QUALITATIVE","NOT INDICATED";
endif;
If  (Box3=true) then
 CALL storeObs With "VENOUS BLOOD LEAD - QUALITATIVE","PENDING";
endif;
If  (Box4=true) then
 CALL storeObs With "VENOUS BLOOD LEAD - QUALITATIVE","POSITIVE";
endif;
If  (Box5=true) then
 CALL storeObs With "VENOUS BLOOD LEAD - QUALITATIVE","LESS THAN 10 MG/DL";
endif;
If  (Box6=true) then
 CALL storeObs With "VENOUS BLOOD LEAD - QUALITATIVE","DEFERRED";
endif;


endif
;;
Action:
write ("**High Lead Toxicity Risk **:  Highest priority risk factor reported for || firstname ||: || Risk_Factor ||  Draw venous lead sample now.");
write ("test already done ->");
write ("test not indicated");
write ("blood drawn");
write ("Positive");
write ("< 10 mg / dl (Negative)");
write ("test deferred/refused");
;;
Age_Min: 10 months;;
Age_Max: 3 years;;
end:
