Library:
	Purpose:		Screen annually for a diiagnosis or symptoms of asthma                                                                                                                                                                                                                                                                                                                                                                                                                                                              ;;
	Explanation:	Checks to see if asthma status is known and has been checked in the last year.  If not, askes family of child has diagnosis or symptoms of asthma                                                                                                                                                                                                                                                                                                                                                                   ;;
	Keywords:	asthma PSF case finding symptoms cough wheeze;;
	Citations:		NHLBI guidelines;;
	Links:		http://www.nhlbi.nih.gov/guidelines/asthma/asthgdln.htm;;
Knowledge:
	Type:		data_driven;;
Data:

mode:=read {mode from Parameters};
Box1:=read {box1 from Parameters};
Box2:=read {box2 from Parameters};
Box3:=read {box3 from Parameters};
Box4:=read {box4 from Parameters};
Box5:=read {box5 from Parameters};
Box6:=read {box6 from Parameters};

If (mode = PRODUCE) then
AsthmaKnown := read Exist {AsthmaStatus from CHICA} ;CheckedThisYear := read Exist {AsthmaStatus from CHICA} Where it Occurred Within Past 365 Days;CurrentStatus := read Last {AsthmaStatus from CHICA} ;                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                
endif
;;
Priority:		205;;
	Evoke:		;;
Logic:
If (mode = PRODUCE) then

If (AsthmaKnown = False) then conclude True;If (CurrentStatus = None) AND (CheckedThisYear = False) then conclude True;If (CurrentStatus = NoSymptoms) AND (CheckedThisYear = False) then conclude True;Else conclude False;                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                             

endif

If (mode = CONSUME) then

If  (Box1=true) then
 CALL storeObs With "AsthmaStatus","Symptoms";
endif;
If  (Box2=true) then
 CALL storeObs With "AsthmaStatus","NoSymptoms";
endif;


endif
;;
Action:
write ("Does || firstname || have asthma or wheezing, cough or breathing problems that won't go away or keep coming back?");
write ("¿Tiene || firstname || tos, le silba el pecho, tiene problemas al respirar que no se curen o que reincidan?") At Spanish;                                                                                                                                                                                                                                                     
;;
Age_Min: 3 years;;
Age_Max: 11 years;;
