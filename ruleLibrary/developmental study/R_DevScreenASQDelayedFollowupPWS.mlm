	Validation:	;;
Library:
	Purpose:		PWS prompt to alert doc to follow-up positive ASQ.                                                                                                                                                                                                                                                                                                                                                     ;;
	Explanation:	                                                                                                                                                                                                                                                                                                                                                                   ;;
	Keywords:	Developmental Screening ASQ                                                  ;;
	Citations:		                                                                                   ;;
	Links:		                                            ;;
Knowledge:
	Type:		data_driven;;
Data:

mode:=read {mode from Parameters};
Box1:=read {box1 from Parameters};
Box2:=read {box2 from Parameters};
Box3:=read {box3 from Parameters};
Box4:=read {box4 from Parameters};
Box5:=read {box5 from Parameters};
Box6:=read {box6 from Parameters};


If (mode = PRODUCE) then 
VisitType := read Last {VisitType} Where it Occurred Within Past 1 Day;    
 
CurrentStatus := read last {CHICA_DevScreen_Status from CHICA} ; 
StatusExists := read exist {CHICA_DevScreen_Status from CHICA} Where it Occurred Within Past 1 Year;   
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                     
endif
;;
Priority: 178;;
	Evoke:		;;

Logic:
If (mode = PRODUCE) then
If  (VisitType = SickVisit) then conclude false;
asqInterventionSite := call LocationAttributeLookup With "isASQInterventionLocation";
asqInterventionSitePartTwo := call LocationAttributeLookup With "isASQInterventionLocationPart2";

If(asqInterventionSite = null) OR NOT (asqInterventionSite = "true") then conclude False;
If(asqInterventionSitePartTwo = null) OR NOT (asqInterventionSitePartTwo = "true") then conclude False;

If (StatusExists = True) then conclude False;

If (CurrentStatus = "Delayed") then conclude True;

conclude False;
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 

endif

If (mode = CONSUME) then

/* This section defines the variables used when calling the storeNotes function. */
If  (Box1=true) OR (Box2=true) OR (Box4=true) OR (Box5=true) OR (Box6=true) then || description || = "|| firstname || has been previously diagnosed with developmental delay.";
If  (Box1=true) then || note1 || = "|| firstname || is still developmentally delayed.";
If  (Box5=true) then || note5 || = "|| firstname || is no longer developmentally delayed.";
/* */

If  (Box1=true) OR (Box2=true) OR (Box4=true) OR (Box5=true) OR (Box6=true) then
CALL storeNote With "description","DEVELOPMENT";
endif;

If  (Box1=true) then
 CALL storeObs With "CHICA_DevScreen_Status","Delayed";
 CALL storeNote With "note1","DEVELOPMENT";
endif;
If  (Box2=true) then
 CALL storeObs With "CHICA_DevScreen_Treatment","WrittenCarePlan";
 CALL storeNote With "I gave them the written care plan that was printed.","DEVELOPMENT";
endif;
If  (Box4=true) then
 CALL storeObs With "CHICA_DevScreen_Treatment","FamilySupportServices";
 CALL storeNote With "I referred them to ASK 1-800-964-4746.","DEVELOPMENT";
endif;
If  (Box5=true) then
 CALL storeObs With "CHICA_DevScreen_Status","Not_Delayed";
 CALL storeNote With "note5","DEVELOPMENT";
endif;
If  (Box6=true) then
CALL storeNote With "I discarded the written care plan that was printed.","DEVELOPMENT";
endif;



endif
;;
Action:

call CREATE_JIT with "Developmental_Care_Plan";
write ("|| firstname || has been previously diagnosed with developmental delay. || he/she || should continue to receive developmental services.  Please confirm the following:");

write ("Patient still delayed-->");	
write ("Attached care plan given");
write("");	
write ("Ref to ASK 1-800-964-4746");
write ("Patient no longer delayed-->");
write("Discard attached care plan");
;;
Age_Min: 2          months     ;;
Age_Max: 66         months     ;;
end:

